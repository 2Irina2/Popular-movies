<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/review_item_padding_bottom"
    android:paddingLeft="@dimen/review_item_padding_left">

    <TextView
        android:id="@+id/review_item_user_tv"
        tools:hint="Jordan"
        android:textSize="@dimen/review_item_user_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_item_content_tv"
        tools:hint="JordanvJordanJordanJordanJordanJordanJordanJordanJordanJordanJordanJordanJordanJordanJordanJordan"
        android:textColor="@android:color/black"
        android:textSize="@dimen/review_item_content_text_size"
        android:paddingLeft="@dimen/review_item_content_padding_left"
        android:paddingRight="@dimen/review_item_content_padding_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/review_item_content_padding_right"
        android:paddingStart="@dimen/review_item_content_padding_left" />
</LinearLayout>