<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_circle_filled_black_24dp"
        android:layout_marginTop="@dimen/details_trailer_icon_margin_top"
        android:layout_marginLeft="@dimen/details_trailer_icon_margin_left"
        android:layout_marginStart="@dimen/details_trailer_icon_margin_left" />

    <TextView
        android:id="@+id/trailer_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_trailer_name_size"
        android:layout_marginLeft="@dimen/details_trailer_name_margin_left"
        tools:hint="Trailer 1"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/details_trailer_name_margin_left" />

</LinearLayout>